<?xml version="1.0"?>
<robot name="rover">
    <!-- materials -->
    <material name="black">
        <color rgba="1.0 1.0 1.0 1.0" />
    </material>

    <material name='gray'>
        <color rgba="0.2 0.2 0.2 5.0" />
    </material>


    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.8 0.4 0.1" />
            </geometry>
            <origin xyz="0.0 0.0 0.1" />
            <material name="gray" />
        </visual>
    </link>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.573 0.0 0.0" />
            <material name="black" />
        </visual>
    </link>

    <joint name="base_right_front_wheel" type="continuous">
        <origin xyz="0.2 0.225 0.1" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="right_front_wheel" />
        <axis xyz="0.0 1.0 0.0" />
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.573 0.0 0.0" />
            <material name="black" />
        </visual>
    </link>

    <joint name="base_left_front_wheel" type="continuous">
        <origin xyz="0.2 -0.225 0.1" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="left_front_wheel" />
        <axis xyz="0.0 1.0 0.0" />
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.573 0.0 0.0" />
            <material name="black" />
        </visual>
    </link>

    <joint name="base_right_back_wheel" type="continuous">
        <origin xyz="-0.2 0.225 0.1" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="right_back_wheel" />
        <axis xyz="0.0 1.0 0.0" />
    </joint>


    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.573 0.0 0.0" />
            <material name="black" />
        </visual>
    </link>

    <joint name="base_left_back_wheel" type="continuous">
        <origin xyz="-0.2 -0.225 0.1" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="left_back_wheel" />
        <axis xyz="0.0 1.0 0.0" />
    </joint>


</robot>